# CC24 Virtual Showroom - Environment Variables
# Copy this file to .env and adjust values

# =============================================================================
# API Server
# =============================================================================
PORT=8000
NODE_ENV=development

# =============================================================================
# Frontend
# =============================================================================
VITE_API_URL=http://localhost:8000

# =============================================================================
# Redis (Job Queue)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# ML Worker
# =============================================================================
ML_WORKER_URL=http://localhost:8001
REMBG_MODEL=u2net  # Options: u2net, u2netp, birefnet-general, isnet-general-use

# =============================================================================
# Storage
# =============================================================================
UPLOAD_DIR=./uploads
PROCESSED_DIR=./processed

# =============================================================================
# Optional: GPU Support
# =============================================================================
# CUDA_VISIBLE_DEVICES=0

# =============================================================================
# Optional: S3-Compatible Storage (MinIO/SeaweedFS)
# =============================================================================
# STORAGE_ENDPOINT=localhost:9000
# STORAGE_ACCESS_KEY=minioadmin
# STORAGE_SECRET_KEY=minioadmin
# STORAGE_BUCKET=cc24-showroom
# STORAGE_USE_SSL=false
